<Window x:Class="HelloWPFApp.HelloWPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:HelloWPFApp"
        mc:Ignorable="d"
        Title="HelloWPF" Height="450" Width="800">
    <Window.Resources>
        <sys:String x:Key="painText">Pain</sys:String>
        <Style TargetType="Button">
            <Setter Property="BorderBrush" Value="Fuchsia"/>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel VerticalAlignment="Top" Margin="0,15,0,0">
            <TextBlock Name="Pain" HorizontalAlignment="Center" FontSize="96" Text="{StaticResource painText}"/>
            <TextBlock HorizontalAlignment="Center" Foreground="Red">test<LineBreak/>lol xd</TextBlock>
            <TextBlock HorizontalAlignment="Center" Foreground="BlueViolet" TextWrapping="Wrap">Aaaaaaaa <Bold>aaaaaaaaaaa</Bold>aaaaaaaaaaaaaaaa <Italic>aaaaaaaaaa</Italic> sssssssss <Underline>sssssssssss</Underline> cccc sssssssss</TextBlock>
            <TextBox Width="300" AcceptsReturn="True" TextWrapping="Wrap" SelectionChanged="TextBox_SelectionChanged"/>
            <TextBox Width="300" IsReadOnly="True" AcceptsReturn="True" Name="returnBox"/>
            <Button Width="80" Click="Button_Click">Ok</Button>
            <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column ="0" HorizontalAlignment="Center">
                    <Label>Checkboxes</Label>
                    <CheckBox Name="Enable_All" Checked="Enable_All_Changed" Unchecked="Enable_All_Changed">Enable All</CheckBox>
                    <StackPanel Name="CheckboxStack" Margin="10,0,0,0">
                        <CheckBox Checked="Checkbox_changed" Unchecked="Checkbox_changed">
                            <TextBlock>1</TextBlock>
                        </CheckBox>
                        <CheckBox Checked="Checkbox_changed" Unchecked="Checkbox_changed">
                            <TextBlock>2</TextBlock>
                        </CheckBox>
                        <CheckBox Checked="Checkbox_changed" Unchecked="Checkbox_changed">
                            <TextBlock>3</TextBlock>
                        </CheckBox>
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Column ="1" HorizontalAlignment="Center">
                    <Label>Color</Label>
                    <RadioButton GroupName="Color">Red</RadioButton>
                    <RadioButton GroupName="Color">Blue</RadioButton>
                    <RadioButton GroupName="Color">Green</RadioButton>
                    <Label>Shape</Label>
                    <RadioButton GroupName="Shape">Square</RadioButton>
                    <RadioButton GroupName="Shape">Triangle</RadioButton>
                    <RadioButton GroupName="Shape">Circle</RadioButton>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
