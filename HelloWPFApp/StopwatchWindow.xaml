<Window x:Class="HelloWPFApp.StopwatchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWPFApp"
        mc:Ignorable="d"
        Title="Stopwatch" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Name="TimeDisplay" FontSize="72" HorizontalAlignment="Center">00:00:00.000</TextBlock>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Name="StartStopButton" Width="100" Height="40" Margin="10" Click="StartStopButton_Click" Grid.Column="0">Start</Button>
                <Button Name="ResetButton" Width="100" Height="40" Margin="10" Click="ResetButton_Click" Grid.Column="1">Reset</Button>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
